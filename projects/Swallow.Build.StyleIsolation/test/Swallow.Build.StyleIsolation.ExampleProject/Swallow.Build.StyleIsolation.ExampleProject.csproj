<Project Sdk="Microsoft.NET.Sdk.Web">
  <UsingTask TaskName="Swallow.Build.StyleIsolation.ReplaceCssScope"
             AssemblyFile="../../src/Swallow.Build.StyleIsolation/bin/$(Configuration)/netstandard2.0/Swallow.Build.StyleIsolation.dll" />

  <Import Project="../../src/Swallow.Build.StyleIsolation/build/Swallow.Build.StyleIsolation.props" />
  <Import Project="../../src/Swallow.Build.StyleIsolation/build/Swallow.Build.StyleIsolation.targets" />

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>

    <IsPackable>false</IsPackable>
    <RootNamespace>Swallow.Build.StyleIsolation</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <InheritStyles Include="DerivedInherit.razor" Inherit="Base.razor" />
    <InheritStyles Include="DerivedInheritNoStyle.razor" Inherit="Base.razor" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="out\" />
  </ItemGroup>
</Project>
