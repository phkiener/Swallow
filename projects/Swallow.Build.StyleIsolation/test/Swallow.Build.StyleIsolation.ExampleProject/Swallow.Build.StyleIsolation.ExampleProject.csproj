<Project Sdk="Microsoft.NET.Sdk.Web">

  <UsingTask TaskName="ReplaceCssScope" AssemblyFile="$(MSBuildThisFileDirectory)../../src/Swallow.Build.StyleIsolation/bin/$(Configuration)/netstandard2.0/Swallow.Build.StyleIsolation.dll" />
  <UsingTask TaskName="AppendCssScope" AssemblyFile="$(MSBuildThisFileDirectory)../../src/Swallow.Build.StyleIsolation/bin/$(Configuration)/netstandard2.0/Swallow.Build.StyleIsolation.dll" />

  <Import Project="$(MSBuildThisFileDirectory)../../src/Swallow.Build.StyleIsolation/build/Swallow.Build.StyleIsolation.props" />
  <Import Project="$(MSBuildThisFileDirectory)../../src/Swallow.Build.StyleIsolation/build/Swallow.Build.StyleIsolation.targets" />

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>

    <IsPackable>false</IsPackable>
    <RootNamespace>Swallow.Build.StyleIsolation</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <InheritStyles Include="DerivedInherit.razor" Inherit="Base.razor" />
    <InheritStyles Include="DerivedInheritNoStyle.razor" Inherit="Base.razor" />
    <AppendStyles Include="DerivedAppend.razor" From="Base.razor" />
    <AppendStyles Include="DerivedAppendNoStyle.razor" From="Base.razor" />
  </ItemGroup>
</Project>
