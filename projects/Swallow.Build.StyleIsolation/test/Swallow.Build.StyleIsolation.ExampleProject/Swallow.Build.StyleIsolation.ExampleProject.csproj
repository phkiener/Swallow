<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <_LocalTaskAssembly>$(MSBuildThisFileDirectory)../../src/Swallow.Build.StyleIsolation/bin/$(Configuration)/netstandard2.0/Swallow.Build.StyleIsolation.dll</_LocalTaskAssembly>
  </PropertyGroup>

  <UsingTask TaskName="ReplaceCssScope" AssemblyFile="$(_LocalTaskAssembly)" />
  <UsingTask TaskName="AppendCssScope" AssemblyFile="$(_LocalTaskAssembly)" />

  <Import Project="$(MSBuildThisFileDirectory)../../src/Swallow.Build.StyleIsolation/build/Swallow.Build.StyleIsolation.props" Condition="EXISTS('$(_LocalTaskAssembly)')" />
  <Import Project="$(MSBuildThisFileDirectory)../../src/Swallow.Build.StyleIsolation/build/Swallow.Build.StyleIsolation.targets" Condition="EXISTS('$(_LocalTaskAssembly)')" />

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>

    <IsPackable>false</IsPackable>
    <RootNamespace>Swallow.Build.StyleIsolation</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <InheritStyles Include="DerivedInherit.razor" From="Base.razor" />
    <InheritStyles Include="DerivedInheritNoStyle.razor" From="Base.razor" />
    <AppendStyles Include="DerivedAppend.razor" From="Base.razor" />
    <AppendStyles Include="DerivedAppendNoStyle.razor" From="Base.razor" />
  </ItemGroup>
</Project>
