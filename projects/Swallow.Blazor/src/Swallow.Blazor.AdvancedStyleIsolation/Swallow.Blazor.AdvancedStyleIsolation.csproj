<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../../../../build/Publish.props" />

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>disable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <ManagePackageVersionsCentrally>false</ManagePackageVersionsCentrally>

    <NoWarn>NU5100;$(NoWarn)</NoWarn>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>

    <IsPackable>true</IsPackable>
    <Authors>Philipp Kiener</Authors>
    <Description>A collection of build targets to improve upon the builtin style isolation of Razor components</Description>
    <PackageTags>blazor razor components style-isolation msbuild build inherit styles cssscope</PackageTags>
    <Copyright>2025 Philipp Kiener</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Utilities.Core"
                      Version="17.0.0"
                      PrivateAssets="All"
                      ExcludeAssets="Runtime" />
  </ItemGroup>

  <ItemGroup>
    <None Include="$(OutputPath)\$(AssemblyName).dll" PackagePath="tasks" Pack="true" Visible="false" />
    <None Update="build\*" PackagePath="build" Pack="true" />
  </ItemGroup>

  <Target Name="AddBuildDependencyFileToBuiltProjectOutputGroupOutput"
          BeforeTargets="BuiltProjectOutputGroup">

    <ItemGroup>
      <BuiltProjectOutputGroupOutput Include="$(ProjectDepsFilePath)"
                                     TargetPath="$(ProjectDepsFileName)"
                                     FinalOutputPath="$(ProjectDepsFilePath)" />
    </ItemGroup>
  </Target>
</Project>
